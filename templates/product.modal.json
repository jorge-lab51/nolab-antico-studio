{
  "sections": {
    "main": {
      "type": "main-product-modal",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "icon": "none",
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
            "title_size": "h2",
            "show_price": false,
            "price_size": "medium"
          }
        },
        "rating": {
          "type": "rating",
          "settings": {}
        },
        "countdown": {
          "type": "countdown",
          "settings": {
            "heading": "Ãšltimas unidades",
            "number_size": "compact",
            "colors_heading": "#da3f3f",
            "colors_text": "#da3f3f",
            "colors_background": "#1a1b18"
          }
        },
        "price": {
          "type": "price",
          "settings": {
            "price_size": "medium",
            "show_badges": true,
            "sale_badge_basis": "auto"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "show_variant_labels": true,
            "picker_type": "button",
            "enable_color_swatches": true,
            "swatches_source": "file",
            "swatch_type": "round",
            "enable_swatch_cross": true,
            "enable_swatch_unavailable_click": false,
            "size_chart": ""
          }
        },
        "inventory_status": {
          "type": "inventory_status",
          "settings": {
            "inventory_threshold": 20,
            "show_inventory_transfer": true,
            "color_scheme": "accent-3"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_quantity_selector": false,
            "show_dynamic_checkout": false
          }
        },
        "read_more": {
          "type": "read_more",
          "settings": {
            "show_icon": false
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Compartir"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "rating",
        "countdown",
        "price",
        "variant_picker",
        "inventory_status",
        "buy_buttons",
        "read_more",
        "share"
      ],
      "settings": {
        "hide_variants": true,
        "enable_image_zoom": true,
        "enable_video_looping": false,
        "enable_image_fill": true,
        "mobile_image_ratio": "adapt_first"
      }
    }
  },
  "order": [
    "main"
  ]
}