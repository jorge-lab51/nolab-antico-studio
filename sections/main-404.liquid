<style type="text/css">
  .template-404 {
    width: 100%;
    position: relative;
  }

  .template-404 img.img-back {
    width: 100%;
    height: auto;
    display: block;
  }

  .template-404 .container-absolute {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    -ms-flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 10rem;
    position: absolute;
    top: 0;
    left: 0;
    background: hsl(0deg 0% 0% / 35%);
  }

  .template-404 .container-absolute .title {
    color: #fff;
    font-size: 7rem;
    line-height: 6rem;
    font-weight: 500;
    margin: 0 0 0;
    font-family: var(--shelby);
  }

  .template-404 .container-absolute p {
    font-size: 18px;
    line-height: 24px;
    color: #fff;
    margin: 0;
  }

  .template-404 .container-absolute .button {
    margin: 20px 0 0;
    background: #fff;
    color: #000;
  }

  .template-404 .container-absolute .button::after {
    box-shadow: none;
  }

  @media screen and (max-width: 830px) {
    .template-404 img.img-back {
      height: 370px;
      object-fit: cover;
    }
    .template-404 .container-absolute {
      padding: 2rem;
    }
    .template-404 .container-absolute .title {
      font-size: 60px;
    }
    .template-404 .container-absolute p {
      font-size: 15px;
      line-height: 20px;
    }
  }

  .predictive-search__item-heading h5 {
    color: #000;
  }

</style>

<div class="template-404">
  <img
    class="img-back"
    src="{{ section.settings.image | image_url: width: 1440 }}"
    alt="{{ section.settings.image.alt | escape }}"
    width="1440"
    height="{{ 1440 | divided_by: section.settings.image.aspect_ratio | ceil }}"
    loading="lazy"
  >
  <div class="container-absolute">
    <h1 class="title">{{section.settings.title}}</h1>
    {{section.settings.text}}
    <a href="/" class="button">
      Ir a la tienda
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "404",
    "class": "page-404",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod.</p>"
      }
    ]
  }
{% endschema %}
